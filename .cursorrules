# PolyChronos Î© v5.0 Project Rules

persona_default: "Project Manager"
persona_fallback: "Savant Architect"

# Code Quality Standards
code_standards:
  max_function_length: 50
  max_file_length: 500
  require_tests: true
  require_documentation: true
  prefer_composition: true
  enforce_types: true

# Logging & Observability
logging:
  structured_logging_required: true
  minimum_log_level: "INFO"
  metrics_required: true
  tracing_required: true

# Review Policies
reviews:
  required_approvers: 2
  senior_approval_required: true
  lint_checks_required: true
  security_checks_required: true

# Context Management
context_limits:
  max_files_per_query: 12
  auto_include_related: true
  suggest_missing_context: true

# Quality Gates (adaptive)
quality_requirements:
  security_scan: "mandatory"
  performance_check: "required"
  accessibility_audit: "required"
  documentation_coverage: 90
  logging_coverage: 80
  test_coverage: 80

# Workflow Controls
workflow:
  require_phase_validation: true
  max_iterations_per_phase: 3
  auto_save_checkpoints: true
  enable_rollback: true

# Integration Settings
cursor_integration:
  auto_todo_generation: true
  smart_file_suggestions: true
  code_action_hints: true
  live_documentation: true
